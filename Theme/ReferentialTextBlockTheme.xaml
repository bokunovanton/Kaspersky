<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Ссылочный текст-->
    <Style TargetType="{x:Type TextBlock}" x:Key="ReferentialTextBlockTheme">
        <Style.Setters>
            <Setter Property="Foreground" Value="#00a68b"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#39d7b8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>