<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Стиль для ссылочных заголовков-->
    <Style x:Key="TitleMenuItemTheme" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="/Fonts/#Roboto"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="Foreground" Value="#40bdaa"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#39d7b8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>